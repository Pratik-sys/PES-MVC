@*FieldSet for Personal Details*@
<fieldset>
    <legend>&nbsp; Personal Details:</legend>
    <div class="container">

        @*First Row*@

        <div class="form-row m-3">
            <div class="form-group col-md-6 d-flex justify-content-center">
                @Html.Label("Name", new { @class = "control-label mr-2" })
                @Html.TextBox(" ", null, new { @class = "form-control", @pattern = "[a-zA-Z ]+", required = "required" })
                <div class="valid-feedback ml-3">

                </div>
                <div class="invalid-feedback ml-3">
                    Only Characters or Spaces are Allowed
                </div>
            </div>
            <div class="form-row  md-3">
                <div class="form-group d-flex justify-content-center">
                    @Html.Label("Gender", new { @class = "control-label mr-2" })
                    @Html.DropDownList(" ", new List<SelectListItem>
                    {
                     new SelectListItem { Text = "Male", Value = "1"},
                     new SelectListItem { Text = "Female", Value = "2"},
                     new SelectListItem { Text = "Other", Value = "3"}
                    }, "Select Gender", new { @class = "form-control", required = "required" })
                    <div class="invalid-feedback ml-3">
                        Select Valid Gender
                    </div>
                </div>
            </div>
        </div>

        @*Second Row*@

        <div class="form-row m-3">
            <div class="form-group col-md-6 d-flex justify-content-center">
                @Html.Label("Address", new { @class = "control-label mr-2" })
                @Html.TextArea(" ", null, new { @class = "form-control", required = "required" })
                <div class="valid-feedback ml-3">

                </div>
                <div class="invalid-feedback ml-3">
                    Provide Valid Address
                </div>
            </div>
            <div class="form-group  d-flex justify-content-center">
                @Html.Label("Telephone", new { @class = "control-label mr-2" })
                @Html.TextBox(" ", null, new { @class = "form-control", @pattern = "[0-9]{10}", required = "required" })
                <div class="valid-feedback ml-3">

                </div>
                <div class="invalid-feedback ml-3">
                    Please Provide 10 Digits only
                </div>
            </div>
        </div>

        @*Third Row*@

        <div class="form-row m-3">
            <div class="form-group col-md-6 d-flex justify-content-center">
                @Html.Label("Date of Birth", new { @class = "control-label mr-2" })
                @Html.TextBox(" ", null, new { @class = "form-control", @type = "date", id = "id_dateOfBirth", @min = "1950-01-01", @max = DateTime.Now.ToString("yyyy-MM-dd"), required = "required" })
                <div class="invalid-feedback ml-3" id="dobError">
                    Provide Valid Date of Birth
                </div>
            </div>

            <div class="form-group col-md-6 d-flex">
                @Html.Label("Smoker", new { @class = " control-label mr-4", required = "Required" })
                <label class="form-check-label">
                    @Html.RadioButton("Smoker", "Yes", new { @checked = true, @class = "form-check-input" }) Yes
                </label>
                <label class="form-check-label">
                    @Html.RadioButton("Smoker", "No", new { @class = "form -check-input" }) No
                </label>
                <div class="valid-feedback ml-3">
                    Looks good!
                </div>
                <div class="invalid-feedback ml-3">
                    Select Whether smoker or not
                </div>
            </div>
        </div>
    </div>
</fieldset>

